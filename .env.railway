# Railway Production Environment Variables
# Bu dosya Railway'e deploy edilmeyecek, sadece referans için

FLASK_ENV=production
FLASK_APP=run.py

# Database - Railway tarafından otomatik set edilir
# DATABASE_URL=postgresql://postgres:oNpIecxBkeRrEiSXYIuUNCtjdiuspFKJ@postgres.railway.internal:5432/railway

# Redis - Railway'de Redis servisi eklenirse
# REDIS_URL=redis://default:password@redis.railway.internal:6379

# Security Keys - Railway Variables'da set et
# SECRET_KEY=<güçlü-random-key>
# JWT_SECRET_KEY=<güçlü-random-key>

# Session Configuration
SESSION_TYPE=redis
SESSION_PERMANENT=False
SESSION_USE_SIGNER=True
SESSION_KEY_PREFIX=session_
PERMANENT_SESSION_LIFETIME=86400

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES=3600

# Upload Configuration
UPLOAD_FOLDER=app/static/uploads
MAX_CONTENT_LENGTH=16777216

# CSRF Protection
WTF_CSRF_ENABLED=True

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=60

# Railway automatically sets PORT variable
# PORT=5000
